<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.MainActivity">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/_200sdp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:background="@drawable/background" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/share_app_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="@dimen/_25sdp"
            android:background="@color/purple_500"
            android:focusable="true"
            android:clickable="true"
            app:tint="@color/white"
            android:layout_marginBottom="@dimen/_20sdp"
            android:src="@drawable/share_app"
            />


        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:layout_marginRight="@dimen/_18sdp"
                    android:layout_marginLeft="@dimen/_18sdp">

                    <ImageView
                        android:id="@+id/logo_iv"
                        android:layout_width="@dimen/_50sdp"
                        android:layout_height="@dimen/_50sdp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/logo_moshafy" />

                    <TextView
                        android:id="@+id/name_logo_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toStartOf="@+id/logo_iv"
                        android:text="@string/app_name"
                        android:textAlignment="viewEnd"
                        android:layout_marginEnd="@dimen/_10sdp"
                        android:textColor="#fff"

                        android:textSize="@dimen/_22sdp" />

                </RelativeLayout>


                <GridLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:alignmentMode="alignMargins"
                    android:columnOrderPreserved="false"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:columnCount="2"
                    android:rowCount="3">



                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/card_tafseers"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:layout_rowWeight="1"
                        android:clickable="true"
                        app:cardElevation="@dimen/_6sdp"
                        app:cardCornerRadius="@dimen/_12sdp"
                        android:layout_margin="@dimen/_12sdp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:padding="@dimen/_18sdp"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="@dimen/_50sdp"
                                android:layout_height="@dimen/_50sdp"
                                android:src="@drawable/tafseer_icon" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/tafseerIcon"
                                android:layout_marginTop="@dimen/_10sdp"
                                android:textAlignment="viewEnd"
                                android:textColor="#000"
                                android:textSize="@dimen/_15sdp" />

                        </LinearLayout>

                    </com.google.android.material.card.MaterialCardView>




                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/card_quran_translate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:layout_rowWeight="1"
                        android:clickable="true"
                        app:cardElevation="@dimen/_6sdp"
                        app:cardCornerRadius="@dimen/_12sdp"
                        android:layout_margin="@dimen/_12sdp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:padding="@dimen/_18sdp"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="@dimen/_50sdp"
                                android:layout_height="@dimen/_50sdp"
                                android:src="@drawable/quran"
                                />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_10sdp"
                                android:textAlignment="viewEnd"
                                android:text="@string/quranEnglish"
                                android:textColor="#000"
                                android:textSize="@dimen/_15sdp"
                                />

                        </LinearLayout>

                    </com.google.android.material.card.MaterialCardView>



                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/azkar_card"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:layout_rowWeight="1"
                        android:clickable="true"
                        app:cardElevation="@dimen/_6sdp"
                        app:cardCornerRadius="@dimen/_12sdp"
                        android:layout_margin="@dimen/_12sdp"
                        android:focusable="true">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:padding="@dimen/_18sdp"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="@dimen/_50sdp"
                                android:layout_height="@dimen/_50sdp"
                                android:src="@drawable/azar_icon" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/azkar"
                                android:layout_marginTop="@dimen/_10sdp"
                                android:textAlignment="viewEnd"
                                android:textColor="#000"
                                android:textSize="@dimen/_15sdp" />

                        </LinearLayout>

                    </com.google.android.material.card.MaterialCardView>



                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/card_reciter"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:layout_rowWeight="1"
                        android:clickable="true"
                        app:cardElevation="@dimen/_6sdp"
                        app:cardCornerRadius="@dimen/_12sdp"
                        android:layout_margin="@dimen/_12sdp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:padding="@dimen/_18sdp"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="@dimen/_50sdp"
                                android:layout_height="@dimen/_50sdp"
                                android:src="@drawable/icon_reciter" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/iconReciters"
                                android:layout_marginTop="@dimen/_10sdp"
                                android:textAlignment="viewEnd"
                                android:textColor="#000"
                                android:textSize="@dimen/_15sdp" />

                        </LinearLayout>

                    </com.google.android.material.card.MaterialCardView>



                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/card_sebha"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:layout_rowWeight="1"
                        android:clickable="true"
                        app:cardElevation="@dimen/_6sdp"
                        app:cardCornerRadius="@dimen/_12sdp"
                        android:layout_margin="@dimen/_12sdp"
                        android:focusable="true">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:padding="@dimen/_18sdp"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="@dimen/_50sdp"
                                android:layout_height="@dimen/_50sdp"
                                android:src="@drawable/icon_sebha"
                                />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_10sdp"
                                android:textAlignment="viewEnd"
                                android:text="@string/sebha"
                                android:textColor="#000"
                                android:textSize="@dimen/_15sdp" />

                        </LinearLayout>

                    </com.google.android.material.card.MaterialCardView>


                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/sera_nabawya"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:layout_rowWeight="1"
                        android:clickable="true"
                        app:cardElevation="@dimen/_6sdp"
                        android:layout_column="1"
                        app:cardCornerRadius="@dimen/_12sdp"
                        android:layout_margin="@dimen/_12sdp"
                        android:focusable="true">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:padding="@dimen/_18sdp"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="@dimen/_50sdp"
                                android:layout_height="@dimen/_50sdp"
                                android:src="@drawable/muhammad_icon" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/sera_nabawya"
                                android:layout_marginTop="@dimen/_10sdp"
                                android:textAlignment="viewEnd"
                                android:textColor="#000"
                                android:textSize="@dimen/_15sdp" />

                        </LinearLayout>

                    </com.google.android.material.card.MaterialCardView>




                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/about_app"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:layout_rowWeight="1"
                        android:clickable="true"
                        app:cardElevation="@dimen/_6sdp"
                        app:cardCornerRadius="@dimen/_12sdp"
                        android:layout_margin="@dimen/_12sdp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:padding="@dimen/_18sdp"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="@dimen/_50sdp"
                                android:layout_height="@dimen/_50sdp"
                                android:src="@drawable/logo_moshafy"
                                />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_10sdp"
                                android:textAlignment="viewEnd"
                                android:text="@string/about_app"
                                android:textColor="#000"
                                android:textSize="@dimen/_15sdp" />

                        </LinearLayout>

                    </com.google.android.material.card.MaterialCardView>


                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/ramadans_nights"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:layout_rowWeight="1"
                        android:clickable="true"
                        app:cardElevation="@dimen/_6sdp"
                        android:layout_column="1"
                        app:cardCornerRadius="@dimen/_12sdp"
                        android:layout_margin="@dimen/_12sdp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:padding="@dimen/_18sdp"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="@dimen/_50sdp"
                                android:layout_height="@dimen/_50sdp"
                                android:src="@drawable/icon_ramadan"
                                />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:text="@string/ramadans"
                                android:layout_marginTop="@dimen/_10sdp"
                                android:textAlignment="viewEnd"
                                android:textColor="#000"
                                android:textSize="@dimen/_15sdp" />

                        </LinearLayout>

                    </com.google.android.material.card.MaterialCardView>















                </GridLayout>

            </LinearLayout>




        </androidx.core.widget.NestedScrollView>


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>